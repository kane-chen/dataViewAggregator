<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:aop="http://www.springframework.org/schema/aop" xmlns:lang="http://www.springframework.org/schema/lang"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
	http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd
	http://www.springframework.org/schema/lang http://www.springframework.org/schema/lang/spring-lang-2.0.xsd
	http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd" default-autowire="byName">

	<bean id="olStorager" class="cn.kane.web.view.aggregator.manager.StoragerInLocalMem"/>
	<!-- definition-manager -->
	<bean id="olStringResourceDefinitionManager" class="cn.kane.web.view.aggregator.manager.BaseStringResourceDefinitionManager">
		<property name="storager" ref="olStorager"/>
	</bean>
	<bean id="olWidgetDefinitionManager" class="cn.kane.web.view.aggregator.manager.BaseWidgetDefinitionManager">
		<property name="storager" ref="olStorager"/>
	</bean>
	<bean id="olPageDefinitionManager" class="cn.kane.web.view.aggregator.manager.BasePageDefinitionManager">
		<property name="storager" ref="olStorager"/>
	</bean>
	<!-- facade -->
	<bean id="olResourceDefinitionManagerFacade" class="cn.kane.web.view.aggregator.manager.ResourceDefinitionManagerFacade">
		<property name="stringResourceDefinitionManager" ref="olStringResourceDefinitionManager"/>
		<property name="widgetDefinitionManager" ref="olWidgetDefinitionManager"/>
		<property name="pageDefinitionManager" ref="olPageDefinitionManager"/>
	</bean>	
	
	
	
</beans>